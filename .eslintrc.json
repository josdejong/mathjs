{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {},
  "overrides": [
    {
      "files": ["*.js"],
      "extends": [
        "standard",
        "plugin:prettier/recommended"
      ]
    },
    {
      "files": ["*.ts"],
      "extends": [
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
      ],
      "plugins": ["@typescript-eslint"],
      "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "project": "types/tsconfig.json"
      }
    }
  ]
}
